<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <!-- Method Overridding : ?_method=PUT
    npm install method-override --save
    -->
    <form class="ui form" action="/blogs/<%= blog._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
             <input type="text" name="blog[title]" value=<%= blog.title%>>
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value=<%= blog.image%>>
        </div>
         <div class="field">
             <label>Blog Content</label>
            <!--<input type="text" name="blog[body]" placeholder="blog post goes here">-->
            <textarea name="blog[body]"><%= blog.title%></textarea>
        </div>
        <input class="ui violet big basic button" type="submit">
    </form>
    
</div>

<% include ./partials/footer %>